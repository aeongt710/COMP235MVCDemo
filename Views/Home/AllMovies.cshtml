@model COMP235MVCDemo.Models.Movies
@{
    ViewBag.Title = "AllMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Movies</h2>
<hr />
@Html.ActionLink("Add a New Movie", "AddMovie", "Home") <p><br /></p>
@using (Html.BeginForm("AllMovies", "Home", FormMethod.Post))
{
    var i = 0;
    @Html.HiddenFor(m => m.EditIndex)
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Director
                </th>
                <th>
                    Description
                </th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @for (i = 0; i < Model.Items.Count(); i++)
            {
                if (!Model.Items[i].IsEditable)
                {
                    <tr>
                        @Html.HiddenFor(m => m.Items[i].Id)
                        <td style="border-bottom-left-radius: 10px; border-top-left-radius: 10px;">@Html.DisplayFor(m => m.Items[i].Title)</td>
                        <td>@Html.DisplayFor(m => m.Items[i].Director)</td>
                        <td>@Html.DisplayFor(m => m.Items[i].Description)</td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { Id = Model.Items[i].Id }) |
                            @Html.ActionLink("Edit", "MoviesEdit", new { id = Model.Items[i].Id }) |
                            @Html.ActionLink("Delete", "MoviesDelete", new { id = Model.Items[i].Id })
                        </td>
                    </tr>
                }
                else
                {
                    <tr style="background-color: #e2e1e1;" class="editRow">
                        @Html.HiddenFor(m => m.Items[i].Id)
                        <td>@Html.TextBoxFor(m => m.Items[i].Title, new { Class = "textboxclass" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].Director, new { Class = "textboxclass" })</td>
                        <td>@Html.TextBoxFor(m => m.Items[i].Description, new { Class = "textboxclass" })</td>
                        <td style="border-bottom-right-radius: 10px; border-top-right-radius: 10px;">
                            @Html.ActionLink("Details", "Details", new { Id = Model.Items[i].Id }) &nbsp;|<input type="submit" value="Save" name="Save" class="btn btn-link" /> |
                            <input type="submit" value="Cancel" name="Cancel" class="btn btn-link" />
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>





